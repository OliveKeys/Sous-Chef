<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StepFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/step_page_top_bar"
                android:background="@color/seafoam_green"
                android:elevation="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_close_black_24dp"
                    android:id="@+id/step_page_close_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/step_page_recipe_title"
                    android:text="Title"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/step_page_top_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/step_page_contents">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/step_page_timer_container"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="30dp">
                <ProgressBar
                    android:id="@+id/step_page_timer_progress_bar"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/circular_progress_bar"
                    android:background="@drawable/circular_progress_bar_background"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:max="100"
                    android:progress="65"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="HH:MM:SS"
                    android:textStyle="bold"
                    android:textSize="35dp"
                    android:id="@+id/step_page_timer_text"
                    app:layout_constraintTop_toBottomOf="@id/step_page_timer_progress_bar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="@string/start_timer"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:id="@+id/step_page_timer_button"
                    android:backgroundTint="@color/seafoam_green"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/step_page_timer_text"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/step_page_timer_container"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/step_page_instructions"
                android:gravity="center_horizontal"
                android:text="TEst test test hfgjkgfdsjkfhjgk hjkfgh asdjdhf jkfhasj fglkfadhg ajkfahf jkfbadf jklasfdhjfkdfasdkjfhdasl"
                android:fontFamily="serif"
                android:textSize="20dp"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/step_page_instructions"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:id="@+id/step_page_ingredients_list"
                tools:listitem="@layout/recipe_ingredient_item"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="10dp"
            android:elevation="30dp"
            android:id='@+id/step_page_done_button'
            android:src="@drawable/ic_check_black_40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="Proceed"
            android:background="@drawable/green_circle_background"/>
        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="10dp"
            android:elevation="30dp"
            android:id='@+id/step_page_back_button'
            android:src="@drawable/ic_back_black_40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:contentDescription="Go Back"
            android:background="@drawable/green_circle_background"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
